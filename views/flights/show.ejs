<%- include('../partials/html-head')  %> 
<link rel="stylesheet" href="/stylesheets/flights/show.css">
<%- include('../partials/nav')  %> 

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline: </div>
    <div>
      <%= flight.airline %>
      <a href="/flights/<%= flight._id %>/edit">
      <button>Edit Flight</button>
      </a>
    </div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departing Date: </div>
    <div><%= flight.departs %></div>
  </section>
  <h2>Tickets</h2>
  <form 
    id="add-review-form"
    action="/flights/<%= flight._id %>/tickets"
    method="POST"
  >
    <label for="content-textarea">Ticket Seat:</label>
    <input name="seat" id="content-textarea" required pattern="[A-F][1-9]\d?" maxlength="3">
    <label for="rating-select">Price:</label>
    <input type="number" name="price" id="rating-select" min="0">
    <button type="submit">Add Ticket</button>
  </form>
  <% if (flight.tickets.length) %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Seat</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% flight.tickets.forEach(ticket => { %>
        <tr>
          <td><%= ticket.createdAt.toLocaleDateString() %></td>
          <td><%= ticket.seat %></td>
          <td><%= ticket.price %></td>
        </tr>
      <% }) %> 
    </tbody>
  </table>
</main>

<%- include('../partials/footer')  %> 