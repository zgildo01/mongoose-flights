<%- include('../partials/html-head')  %> 
<link rel="stylesheet" href="/stylesheets/flights/show.css">
<%- include('../partials/nav')  %> 

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline: </div>
    <div>
      <%= flight.airline %>
      <a href="/flights/<%= flight._id %>/edit">
      <button>Edit Flight</button>
      </a>
    </div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departing Date: </div>
    <div><%= flight.departs %></div>
  </section>
  <h2>Tickets</h2>
  <form 
    id="add-review-form"
    action="/movies/<%= flight._id %>/tickets"
    method="POST"
  >
    <label for="content-textarea">Ticket Seat:</label>
    <input name="seat" id="content-textarea" required pattern="[A-F][1-9]\d?">
    <label for="rating-select">Price:</label>
    <input type="number" name="price" id="rating-select" min="0">
    <button type="submit">Add Ticket</button>
  </form>
</main>

<%- include('../partials/footer')  %> 