<%- include('../partials/html-head')  %> 
<link rel="stylesheet" href="/stylesheets/flights/new.css">
<%- include('../partials/nav')  %> 
<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="post">
    <label for="title-input">Airline:</label>
    <input type="text" name="airline" id="title-input">
    <label for="release-year-input">Airport:</label>
    <input type="text" name="airport" id="release-year-input">
    <label for="mpaa-rating-select">Flight Number:</label>
    <input type="text" name="flightNo" id="mpaa-rating-select">
    <label for="cast-input">Departure Date:</label>
    <input type="datetime-local" name="departs" id="cast-input">
    <button type="submit">Add Flight</button>
  </form>
</main>
